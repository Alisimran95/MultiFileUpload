@model List<FlowerExpert>;

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <strong class="card-title">Experts List</strong>
            </div>
            <div class="card-body">
                <table class="table">
                    <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">JobPosition</th>
                        <th scope="col">Image</th>
                        <th scope="col">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in @Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.JobPosition</td>
                            <td>
                                <img src="~/img/@item.Image" style="width: 100px" height="100px"/>
                            </td>
                            <td class="d-flex justify-content-between" >
                                <a class="btn btn-warning"  asp-controller="FlowerExpert" asp-action="Update" asp-route-id="@item.Id">Update</a>
                                <a class="btn btn-info ml-1 mr-1"  asp-controller="FlowerExpert" asp-action="Details" asp-route-id="@item.Id">Details</a>
                                <a id="delete-item-btn" class="btn btn-danger delete-item-btn" asp-area="AdminPanel" asp-controller="FlowerExpert" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>   
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
