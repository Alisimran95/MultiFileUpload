@model FlowerExpert;
@{
    ViewData["Title"] = "Update";
}

<div class="row">
<div class="col-lg-6">
    <div class="card">
        <div class="card-header">
            <strong>Update</strong> Flower Expert
        </div>
        <div class="card-body card-block">
            <form method="post" class="" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Name" class=" form-control-label">Expert Name</label>
                    <input asp-for="Name" class="form-control">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="JobPosition" class=" form-control-label">Job position</label>
                    <input asp-for="JobPosition" class="form-control">
                    <span asp-validation-for="JobPosition" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <img src = "~/img/@Model.Image" style ="width: 150px" height="100px">
                    <label asp-for="Photo" class=" form-control-label">Photo</label>
                    <input asp-for="Photo" class="form-control" accept="image/*">
                    <span asp-validation-for="Photo" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary btn-sm">Submit</button>
                <a asp-action="Index"  class="btn btn-danger btn-sm">Cancel</a>
            </form>
        </div>
    </div>
</div>
</div>
