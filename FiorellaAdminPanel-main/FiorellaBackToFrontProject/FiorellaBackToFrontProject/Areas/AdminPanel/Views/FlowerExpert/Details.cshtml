@model FlowerExpert;
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="row">
    <div class="col-md-4">
        <div class="card">
            <img class="card-img-top" src="~/img/@Model.Image" alt="Card image cap">
            <div class="card-body">
                <h4 class="card-title mb-3">@Model.Name</h4>
                <p class="card-text">@Model.JobPosition</p>
                <a class="btn btn-info" asp-controller="FlowerExpert" asp-action="Update" asp-route-id="@Model.Id" >Update</a>
                <a class="btn btn-primary" asp-controller="FlowerExpert" asp-action="Index">Go to Back</a>
            </div>
        </div>
    </div>

</div>

