@model SliderImage;
@{
    ViewData["Title"] = "Delete";
}
<div class="row">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-header">
                <strong>Delete Slider Image</strong>
            </div>
            <img src="~/img/@Model.Name" style="width: 100%" height="100%"/>
        </div>
    </div>
</div> 

<div class="row">
    <form method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
    </form>
    <a class="btn btn-light" asp-action="Index">Cancel</a>
</div>