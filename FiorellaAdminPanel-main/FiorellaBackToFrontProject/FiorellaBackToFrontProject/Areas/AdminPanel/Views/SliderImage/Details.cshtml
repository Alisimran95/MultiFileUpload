@model SliderImage;
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="row">
    <div class="col-md-4">
        <div class="card">
            <img class="card-img-top" src="~/img/@Model.Name" alt="Card image cap">
            <div class="card-body">
                <a class="btn btn-info" asp-controller="SliderImage" asp-action="Update" asp-route-id="@Model.Id">Update</a>
                <a class="btn btn-primary" asp-controller="SliderImage" asp-action="Index">Go to Back</a>
            </div>
        </div>
    </div>

</div>